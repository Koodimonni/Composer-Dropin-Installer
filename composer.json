{
    "name": "koodimonni/composer-dropin-installer",
    "description": "Install packages or a few files from packages into custom paths without overwriting existing stuff.",
    "license": "WTFPL",
    "type": "composer-plugin",
    "authors": [
        {
            "name": "Onni Hakala",
            "email": "onni@keksi.io",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^5.3.2 || ^7.0.0",
        "composer-plugin-api": "^1.0 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Koodimonni\\Composer\\": "src/"
        }
    },
    "extra": {
        "class": "Koodimonni\\Composer\\Dropin"
    },
    "scripts": {
        "test:move": [
            "@composer update --working-dir=./tests/move/",
            "phpunit --verbose ./tests/move/*.php"
        ],
        "test:copy": [
            "@composer update --working-dir=./tests/copy/",
            "phpunit --verbose ./tests/copy/*.php"
        ],
        "test": [
            "@test:move",
            "@test:copy"
        ]
    }
}
